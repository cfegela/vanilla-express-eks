aws_region = "REGION"
cluster_name       = "CLUSTERNAME"
kubernetes_version = "1.31"
vpc_cidr = "10.0.0.0/16"
domain_name         = "R53CNAME" # ex: cfeg.cwf.oddball.io
acm_certificate_arn = "arn:aws:acm:us-east-1:620743043986:certificate/d5874127-956a-4242-9da2-de18e6f455d5"
hosted_zone_name = "HOSTEDZONENAME" # ex: cwf.oddball.io
hosted_zone_id   = "HOSTEDZONEID"
enable_external_dns = true # should always be true

# CloudFront Frontend Configuration
enable_cloudfront    = true
frontend_domain_name = "FRONTEND_DOMAIN" # ex: cfeg-ui.cwf.oddball.io
frontend_api_url     = "https://BACKEND_DOMAIN" # ex: https://cfeg-api.cwf.oddball.io

# Backend API Configuration
enable_backend             = true
backend_domain_name        = "BACKEND_DOMAIN" # ex: cfeg-api.cwf.oddball.io
backend_jwt_access_secret  = "YOUR_JWT_ACCESS_SECRET_HERE"
backend_jwt_refresh_secret = "YOUR_JWT_REFRESH_SECRET_HERE"
backend_admin_username     = "admin"
backend_admin_password     = "YOUR_ADMIN_PASSWORD_HERE"
